{% extends 'base.html.twig' %}

{% block title %}Contactez-nous
{% endblock %}

{% block body %}
	<div class="uk-section uk-section-muted uk-padding-large">
		<div class="uk-container uk-container-small uk-animation-slide-top-small">
			<h1 class="uk-heading-divider uk-text-center" style="font-family: 'Leckerli One', cursive; color: #333;">
				Contactez-nous
			</h1>
			<p class="uk-text-center" style="font-family: 'Montserrat', sans-serif; color: #555;">
				N'hésitez pas à nous contacter pour nous laisser des suggestions, poser des questions, partager vos avis sur le site ou pour toute demande d'une éventuelle collaboration.
			</p>

			<!-- Formulaire de contact -->
			<form action="{{ path('app_contact') }}" method="post" class="uk-form-stacked uk-margin-large-top uk-animation-fade">
				<div class="uk-margin">
					<label class="uk-form-label" for="email" style="font-family: 'Montserrat', sans-serif; color: #333;">Votre e-mail :</label>
					<div class="uk-form-controls">
						<input class="uk-input uk-form-large uk-border-rounded" id="email" name="email" type="email" placeholder="Entrez votre e-mail" required>
					</div>
				</div>

				<div class="uk-margin">
					<label class="uk-form-label" for="subject" style="font-family: 'Montserrat', sans-serif; color: #333;">Titre :</label>
					<div class="uk-form-controls">
						<input class="uk-input uk-form-large uk-border-rounded" id="subject" name="subject" type="text" placeholder="Entrez le sujet" required>
					</div>
				</div>

				<div class="uk-margin">
					<label class="uk-form-label" for="message" style="font-family: 'Montserrat', sans-serif; color: #333;">Message :</label>
					<div class="uk-form-controls">
						<textarea class="uk-textarea uk-form-large uk-border-rounded" id="message" name="message" rows="5" placeholder="Votre message..." required></textarea>
					</div>
				</div>

				<div class="uk-margin">
					<button class="uk-button uk-button-primary uk-button-large uk-width-1-1 uk-border-rounded" type="submit">Envoyer</button>
				</div>
			</form>

			<!-- Message flash après envoi -->
			{% for message in app.flashes('success') %}
				<div class="uk-alert-success uk-text-center" uk-alert>
					<a class="uk-alert-close" uk-close></a>
					<p>{{ message }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
