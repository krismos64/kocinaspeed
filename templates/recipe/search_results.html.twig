{% extends 'base.html.twig' %}

{% block title %}Résultats pour "{{ query }}"
{% endblock %}

{% block body %}
	<div class="uk-container">
		<h1>Résultats pour "{{ query }}"</h1>
		{% if recipes is not empty %}
			<div class="uk-grid-match uk-child-width-1-2 uk-child-width-1-3@m" data-uk-grid>
				{% for recipe in recipes %}
					<div>
						<div class="uk-card uk-card-default uk-card-hover">
							<div class="uk-card-media-top">
								<div class="uk-cover-container" style="height: 200px;">
									{% if recipe.images|length > 0 %}
										<img src="{{ asset('uploads/recipes/' ~ recipe.images|first.imagePath) }}" alt="{{ recipe.name }}" uk-cover>
									{% else %}
										<img src="{{ asset('img/default-image.jpg') }}" alt="{{ recipe.name }}" uk-cover>
									{% endif %}
								</div>
							</div>
							<div class="uk-card-body uk-padding-small">
								<h3 class="uk-card-title uk-text-500 uk-margin-remove-bottom">{{ recipe.name }}</h3>
							</div>
							<a href="{{ path('app_recipe_details', { slug: recipe.slug }) }}" class="uk-position-cover"></a>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p>Aucune recette trouvée pour "{{ query }}"</p>
		{% endif %}
	</div>
{% endblock %}
