{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe
{% endblock %}

{% block body %}
	<div class="uk-section uk-flex uk-flex-middle uk-flex-center uk-animation-fade" uk-height-viewport="expand: true" style="background: #f8f9fa;">
		<div class="uk-width-1-3@m uk-width-1-2@s uk-card uk-card-default uk-card-body uk-box-shadow-large uk-border-rounded">
			<h2 class="uk-text-center">Nouveau mot de passe</h2>

			{% if app.session.flashBag.has('error') %}
				<div class="uk-alert-danger uk-text-center" uk-alert>
					<p>{{ app.session.flashBag.get('error')[0] }}</p>
				</div>
			{% endif %}

			<form action="{{ path('app_reset_password', {'token': token}) }}" method="post">
				<div class="uk-margin">
					<label class="uk-form-label" for="password">Nouveau mot de passe :</label>
					<div class="uk-inline uk-width-1-1">
						<span class="uk-form-icon" uk-icon="icon: lock"></span>
						<input class="uk-input uk-form-large uk-border-rounded" type="password" id="password" name="password" required>
					</div>
				</div>

				<div class="uk-margin">
					<button type="submit" class="uk-button uk-button-primary uk-button-large uk-border-rounded uk-width-1-1">Réinitialiser</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
