{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}
	<div
		class="uk-container uk-margin-large-top">
		<!-- Affichage des messages flash -->
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="uk-alert-{{ label }}" uk-alert>
					<a class="uk-alert-close" uk-close></a>
					<p>{{ message }}</p>
				</div>
			{% endfor %}
		{% endfor %}

		<!-- Formulaire de demande de réinitialisation -->
		<h2>Réinitialisation de mot de passe</h2>
		<form action="{{ path('app_forgot_password') }}" method="post">
			<div class="uk-margin">
				<label for="email">Entrez votre adresse e-mail :</label>
				<input type="email" name="email" id="email" class="uk-input" required>
			</div>
			<div class="uk-margin">
				<button type="submit" class="uk-button uk-button-primary">Envoyer</button>
			</div>
		</form>
	</div>
{% endblock %}
