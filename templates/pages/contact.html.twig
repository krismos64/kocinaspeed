{% extends 'base.html.twig' %}

{% block title %}Contact - Kocinaspeed{% endblock %}

{% block body %}
<div class="uk-container uk-margin-large-top">
    <div class="uk-grid-match" uk-grid>
        <div class="uk-width-1-3@m">
            <!-- Sidebar vide pour Ã©quilibrer la mise en page -->
        </div>
        <div class="uk-width-2-3@m">
            <div class="uk-card uk-card-default uk-card-body">
                <h1 class="uk-card-title">Contactez-nous</h1>
                
                {% for message in app.flashes('success') %}
                    <div class="uk-alert-success" uk-alert>
                        <a class="uk-alert-close" uk-close></a>
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="uk-alert-danger" uk-alert>
                        <a class="uk-alert-close" uk-close></a>
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}

                <form method="post" class="uk-form-stacked">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="email">Email</label>
                        <div class="uk-form-controls">
                            <input class="uk-input" id="email" name="email" type="email" required>
                        </div>
                    </div>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="title">Sujet</label>
                        <div class="uk-form-controls">
                            <input class="uk-input" id="title" name="title" type="text" required>
                        </div>
                    </div>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="message">Message</label>
                        <div class="uk-form-controls">
                            <textarea class="uk-textarea" id="message" name="message" rows="5" required></textarea>
                        </div>
                    </div>

                    <div class="uk-margin">
                        <button class="uk-button uk-button-primary" type="submit">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}